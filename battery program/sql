#3.제품재고
DROP TABLE INVENTORY;
CREATE TABLE INVENTORY (
    INVENTORY_NAME VARCHAR2(30) PRIMARY KEY,
    INVENTORY_COUNT  NUMBER(3)
);
INSERT INTO INVENTORY VALUES ('18650 배터리', 3);
INSERT INTO INVENTORY VALUES ('21700 배터리', 2);

#4.납품확인
DROP TABLE DELIVERY_LIST;
CREATE TABLE DELIVERY_LIST(
    ID     NUMBER(4) CONSTRAINT DEL_ID_PK PRIMARY KEY,
    SUPPLIER VARCHAR2(20) CONSTRAINT DEL_SUP_NN NOT NULL,
    SIZE_21700 NUMBER(5),
    SIZE_18650 NUMBER(5),
    DEL_DATE DATE CONSTRAINT DEL_DT_NN NOT NULL
);

INSERT INTO DELIVERY_LIST VALUES (1, '서울', 1, 2, '2023-08-11');
INSERT INTO DELIVERY_LIST VALUES (2, '경기', 2, 3, '2023-08-11');
CREATE SEQUENCE DELIVERY_SEQ
    INCREMENT BY 1
    START WITH 1
    MINVALUE 1
    MAXVALUE 9999;
COMMIT;
