#1.주문
DROP TABLE ORDER_INFO;
DROP SEQUENCE SEQUENCE_NEXT;

CREATE SEQUENCE SEQUENCE_NEXT
  START WITH 1
  INCREMENT BY 1
  NOCACHE
  NOCYCLE;
CREATE TABLE ORDER_INFO (
    ORDER_ID    NUMBER PRIMARY KEY,
    CLIENT_NAME    VARCHAR2(30),
    PRODUCT_NAME   VARCHAR2(30),
    PRODUCT_COUNT  NUMBER(3),
    ORDER_DATE DATE,
    DELIVERY_STATUS VARCHAR2(30) DEFAULT 'X'
);

DELETE FROM ORDER_INFO;
INSERT INTO ORDER_INFO VALUES (SEQUENCE_NEXT.NEXTVAL, 'A', '21700 배터리', 10, '2023-08-09', '결제완료');
INSERT INTO ORDER_INFO VALUES (SEQUENCE_NEXT.NEXTVAL, 'B', '18650 배터리', 30, '2023-08-09', '결제완료');
INSERT INTO ORDER_INFO VALUES (SEQUENCE_NEXT.NEXTVAL, 'C', '18650 배터리', 500, '2023-08-09', '결제완료');
INSERT INTO ORDER_INFO VALUES (SEQUENCE_NEXT.NEXTVAL, 'D', '21700 배터리', 80, '2023-08-09', '결제완료');

#2.원재료재고
DROP TABLE MATERIAL_TABLE;
CREATE TABLE MATERIAL_TABLE (
    MATERIAL_NAME    VARCHAR2(30),
    MATERIAL_COUNT   NUMBER
);

DELETE FROM MATERIAL_TABLE;
INSERT INTO MATERIAL_TABLE VALUES ('양극재', 11);
